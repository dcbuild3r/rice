alias vim="nvim"

## Config
alias zshrc="vim ~/.zshrc && source ~/.zshrc"
alias aliasrc="vim ~/.config/aliasrc && source ~/.config/aliasrc"
alias xinitrc="vim ~/.xinitrc"
alias awrc="vim ~/.config/awesome/rc.lua"
alias alarc="vim ~/.config/alacritty/alacritty.yml"
alias brice="cp ~/.config/awesome/rc.lua ~/code/personal/rice/.config/awesome/ && cp ~/.xinitrc ~/code/personal/rice/ && cp ~/.config/alacritty/alacritty.yml ~/code/personal/rice/.config/alacritty/ && cp ~/.zshrc ~/code/personal/rice/.zshrc && cp ~/.config/aliasrc ~/code/personal/rice/"

## Install

alias paci="sudo pacman -S"
alias pacu="sudo pacman -Syu"
alias yi="yay -S"
alias yu="yay -Syu"

## Git
alias gplo='git pull origin'
alias gpso='git push origin'
alias gpsom='git push origin main'
alias gplom='git pull origin main'
alias ga='git add -A'
alias gc='git commit -m'
alias gcl='git clone'
alias gb='git branch -a'
alias gst='git status'
alias gch='git checkout'
